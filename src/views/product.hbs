    <main>
        <h2>Juegos disponibles para comprar</h2>
            <table>
                    <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                <th>Price</th>
                            </tr>
                    </thead>
                    <tbody>
                        {%= for producto in productos %}
                        <tr>
                            <td>{{producto.nombre}}</td>
                            <td>{{producto.descripcion}}</td>
                            <td>{{producto.price}}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
            </table>
    </main>
    <footer></footer>
</body>
</html>
